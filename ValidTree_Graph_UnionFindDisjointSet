public class Solution {
    List <int> parent = new List <int> ();
    public bool ValidTree(int n, int[][] edges) 
    {
        // Init parent
        for(int i=0;i<n;i++) parent.Add(i);
        
        // Traverse edges
        for (int i=0;i<edges.Length;i++)
        {
            int parentX = getParent(edges[i][0]);
            int parentY = getParent(edges[i][1]);
            
            if (parentX == parentY)
            {
                // forming a loop
                return false;
            }
            
            parent[parentY] = parentX;
        }
        
        int supposedRoot = getParent(0);
        for (int i=1;i<n;i++)
        {
            if (getParent(i) != supposedRoot)
            {
                // disjoint graph
                return false;
            }
        }
        
        return true;
    }
    
    private int getParent(int i)
    {
        while (parent[i] != i)
        {
            i = parent[i];
        }
        return i;
    }
}
